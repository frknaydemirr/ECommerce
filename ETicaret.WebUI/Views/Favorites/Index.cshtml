@model List<Product>
@{

    ViewBag.Title = "Favorilerim"; 

}



<section class="container my-5">

    <div class="text-center">
        <h1 class="display-4">
            Favorilerim
        </h1>
    </div>
    <div class="row">
        <div class="col-md-8">
        <div class="table-responsive">
                 @if (Model.Any())
                        {
            <table class="table table-hover table-striped">
                <tr>
                    <th ></th>
                     <th>Ürün</th>
                      <th >Fiyat</th>
                      <th></th>
                </tr>
                <tbody>
                            @foreach(var item in Model)
                            {
                                <tr>
                                    <td>
                                       <img src="/Img/Products/@item.Image" height="37" />
                                    </td>
                                    <td>
                                        <a class="nav-link text-dark" href="/Products/Details/@item.Id">
                                            @item.Name
                                        </a>
                                    </td>
                                    <td>
                                        @item.Price.ToString("c")
                                    </td>
                                    <td>
                                        <form asp-action="Remove" asp-controller="Favorites">
                                        <input  type="hidden" name="ProductId" value="@item.Id" />
                                            <button class="btn btn-sm btn-danger" type="submit" >
                                                <i class="bi bi-x-lg"></i>
                                            </button>

                                        </form>
                                    </td>
                                </tr>
                            }
                </tbody>
                    </table>
                }
                else
                {
                    <div class="container my-5">
                        <div class="alert alert-warning">


                            <h3>Favorilerinizde Ürün bulunmamaktadır!</h3>
                        </div>

                    </div>
                }
            </div>

        </div>
    </div>        
</section>