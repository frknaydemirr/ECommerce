@{
    ViewData["Title"] = "Şifre Yenile";
}


<div class="row">
    <div class="col-md-4 m-auto my-5">
        <h1>Şifre Yenile</h1>
        <hr />
        <form asp-action="PasswordChange">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="user" value="@Context.Request.Query["user"]" />

            <div class="form-group">
                <label for="Password" class="control-label">Yeni Şifre</label>
                <input id="Password" name="Password" type="password" class="form-control" required />
            </div>

            <div class="form-group mt-2">
                <input type="submit" value="Şifremi Güncelle" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>