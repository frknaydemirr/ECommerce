@model IEnumerable<News>

@{
    ViewData["Title"] = "Kampanya ve Duyurular";
}



<p>
    <a asp-action="Create" class="btn btn-outline-primary">
        <i class="fa-solid fa-plus "></i>
        Yeni Ekle
    </a>
</p>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    @item.CreateDate.ToLongDateString()
            </td>

                <td>
                    @if (!string.IsNullOrWhiteSpace(item.Image))
                    {
                        <img src="~/img/@item.Image" alt="@item.Name" height="30" />
                    }
                </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
                <td>
                    <a asp-action="Edit" class="btn btn-sm btn-primary" asp-route-id="@item.Id">
                        <i class="fa-solid fa-pen-to-square"></i>
                        Düzenle
                    </a>
                    <a asp-action="Details" class="btn btn-sm btn-info" asp-route-id="@item.Id">
                        <i class="fa-solid fa-magnifying-glass"></i>
                        Detay
                    </a>
                    <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@item.Id">
                        <i class="fa-solid fa-trash"></i>
                        Sil
                    </a>
                </td>
        </tr>
}
    </tbody>
</table>
