@model IEnumerable<ECommerce.Core.Entities.Slider>

@{
    ViewData["Title"] = "Slider ";
}



<p>
    <a asp-action="Create" class="btn btn-outline-primary">
        <i class="fa-solid fa-plus "></i>
        Yeni Ekle
    </a>
</p>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Link)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>

                <td>
                    <a href="~/img/Slider/@item.Image">
                        <img src="~/img/Slider/@item.Image" alt="" height="50" />
                    </a>
                       

                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Link)
            </td>
                <td>
                    <a asp-action="Edit" class="btn btn-sm btn-primary" asp-route-id="@item.Id">
                        <i class="fa-solid fa-pen-to-square"></i>

                    </a>
                    <a asp-action="Details" class="btn btn-sm btn-info" asp-route-id="@item.Id">
                        <i class="fa-solid fa-magnifying-glass"></i>

                    </a>
                    <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@item.Id">
                        <i class="fa-solid fa-trash"></i>

                    </a>
                </td>
        </tr>
}
    </tbody>
</table>
